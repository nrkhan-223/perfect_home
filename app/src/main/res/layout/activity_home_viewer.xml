<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EDD3D2CF"
    tools:context=".HRF.Home_viewer"
    android:orientation="vertical">
        <androidx.appcompat.widget.SearchView
            android:id="@+id/hsearch"
            android:layout_margin="10dp"
            android:elevation="40dp"
            android:background="@drawable/bg_search"
            android:layout_width="match_parent"
            app:iconifiedByDefault="false"
            app:queryHint="Search by location or name...."
            android:layout_height="wrap_content"/>
        <Spinner
            android:id="@+id/filter_spinnerh"
            android:layout_width="130dp"
            android:layout_height="28dp"
            android:layout_gravity="right"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="4dp"
            android:background="@drawable/bg_price"/>

        <androidx.recyclerview.widget.RecyclerView
            android:background="#EDD3D2CF"
            android:id="@+id/homeviewerRecycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </androidx.recyclerview.widget.RecyclerView>



</LinearLayout>