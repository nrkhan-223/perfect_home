<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="7dp"
    app:cardBackgroundColor="#F1EFEF"
    app:cardCornerRadius="17dp"
    app:cardElevation="10dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="200dp"
    android:layout_height="140dp"
    >


        <RelativeLayout
            android:background="@drawable/bg_search"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:padding="10dp">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/propertyImageItem"
                android:layout_width="80dp"
                android:layout_height="100dp"
                android:layout_alignParentStart="true"
                android:layout_marginTop="4dp"
                android:scaleType="centerCrop"
                android:src="@drawable/demo_pic"
                app:shapeAppearanceOverlay="@style/corner_round" />

            <TextView
                android:textColor="#000000"
                android:id="@+id/tv1"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginStart="6dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@+id/propertyImageItem"
                android:lines="1"
                android:text="Name:"
                android:textSize="14dp" />

            <TextView
                android:lines="1"
                android:textColor="#000000"
                android:id="@+id/propertyNameItem"
                android:layout_width="200dp"
                android:layout_height="25dp"
                android:layout_marginStart="3dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@+id/tv1"
                android:text="property name"
                android:textSize="14dp" />


            <TextView
                android:textColor="#000000"
                android:id="@+id/tv2"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_below="@+id/tv1"
                android:layout_marginStart="6dp"
                android:layout_marginTop="8dp"
                android:layout_toEndOf="@+id/propertyImageItem"
                android:lines="1"
                android:text="Price:"
                android:textSize="14dp" />


            <TextView
                android:lines="1"
                android:textColor="#000000"
                android:id="@+id/propertyPriceItem"
                android:layout_width="200dp"
                android:layout_height="25dp"
                android:layout_below="@+id/propertyNameItem"
                android:layout_marginStart="3dp"
                android:layout_marginTop="8dp"
                android:layout_toEndOf="@+id/tv2"
                android:text="price"
                android:textSize="14dp" />

            <TextView
                android:textColor="#000000"
                android:id="@+id/tv3"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_below="@+id/tv2"
                android:layout_marginStart="6dp"
                android:layout_marginTop="8dp"
                android:layout_toEndOf="@+id/propertyImageItem"
                android:lines="1"
                android:text="Location:"
                android:textSize="14dp" />

            <TextView
                android:lines="1"
                android:textColor="#000000"
                android:id="@+id/propertyLocationItem"
                android:layout_width="200dp"
                android:layout_height="25dp"
                android:layout_below="@+id/propertyPriceItem"
                android:layout_marginStart="3dp"
                android:layout_marginTop="8dp"
                android:layout_toEndOf="@+id/tv3"
                android:text="location"
                android:textSize="14dp" />


        </RelativeLayout>

</androidx.cardview.widget.CardView>