<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    app:cardCornerRadius="17dp"

    app:cardBackgroundColor="#F1EFEF"
    app:cardElevation="5dp"
    android:layout_margin="5dp"
    android:layout_height="150dp"
    >
    <ImageView
        android:elevation="10dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="right"
        android:layout_marginEnd="15dp"
        android:id="@+id/delete"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:src="@drawable/cross"
        android:layout_marginStart="170dp"

        />
    <RelativeLayout
        android:background="@drawable/bg_search"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:padding="5dp">


        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ImageItem"
            android:layout_width="130dp"
            android:scaleType="centerCrop"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:src="@drawable/demo_pic"
            app:shapeAppearanceOverlay="@style/corner_round" />

        <TextView
            android:textColor="#000000"
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginStart="6dp"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@+id/ImageItem"
            android:lines="1"
            android:text="Name:"
            android:textSize="14sp" />


        <TextView
            android:textColor="#000000"
            android:id="@+id/propertyNameItem"
            android:layout_width="200dp"
            android:layout_height="25dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@+id/tv1"
            android:text="property name"
            android:textSize="14sp" />

        <TextView
            android:textColor="#000000"
            android:id="@+id/tv2"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_below="@+id/tv1"
            android:layout_marginStart="6dp"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@+id/ImageItem"
            android:lines="1"
            android:text="Price:"
            android:textSize="14sp" />


        <TextView
            android:textColor="#000000"
            android:id="@+id/propertyPriceItem"
            android:layout_width="200dp"
            android:layout_height="25dp"
            android:layout_below="@+id/propertyNameItem"
            android:layout_marginStart="3dp"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@+id/tv2"
            android:text="price"
            android:textSize="14sp" />

        <TextView
            android:textColor="#000000"
            android:id="@+id/tv3"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_below="@+id/tv2"
            android:layout_marginStart="6dp"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@+id/ImageItem"
            android:lines="1"
            android:text="Location:"
            android:textSize="14sp" />

        <TextView
            android:textColor="#000000"
            android:id="@+id/propertyLocationItem"
            android:layout_width="200dp"
            android:layout_height="25dp"
            android:layout_below="@+id/propertyPriceItem"
            android:layout_marginStart="3dp"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@+id/tv3"
            android:text="location"
            android:textSize="14sp" />



    </RelativeLayout>




</androidx.cardview.widget.CardView>