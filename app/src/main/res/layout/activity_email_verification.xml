<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:layout_height="match_parent"
    android:background="#D2D5D6"
    tools:context=".Email_Verification">




    <RelativeLayout
        android:background="#4DD3E4"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="200dp">


        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email verification"
            android:layout_marginLeft="48dp"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/alfaregular"
            android:textColor="@color/black"
            android:textSize="23sp" />



    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:fontFamily="@font/alfaregular"
            android:textSize="25dp"
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@drawable/bg_search"
            android:text="Verify Your Gmail " />
        <TextView
            android:gravity="bottom"
            android:textSize="15dp"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="20dp"
            android:id="@+id/tv2"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="click button to send mail to your email address " />

        <Button
            android:id="@+id/verification_btn"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="8dp"
            android:background="#4DD3E4"
            android:text="Verify"
            android:textColor="@color/black" />
        <TextView
            android:id="@+id/reg3"
            android:layout_marginLeft="7dp"
            android:textSize="17dp"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:text="Register new account!!"
            android:layout_width="wrap_content"
            android:layout_height="30dp"/>


    </LinearLayout>


</LinearLayout>